{% extends 'EguliasQuizBundle::layout.html.twig' %}

{% block extra_css %}
        <link rel="stylesheet" href="{{ asset('bundles/eguliasquiz/css/questions.css') }}" type="text/css" media="all" />
{% endblock %}

{% block extra_js %}
        <script src="{{ asset ('bundles/eguliasquiz/js/questions.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
<h1>{% trans %} New Question {% endtrans  %}</h1>

<form action="{{  path('egulias_question_save') }}" method="POST" {{ form_enctype(form)}} class="form-stacked">
    <div class="clearfix">
      {{ form_label(form.name) }}
      {{ form_errors(form.name) }}
      {{ form_widget(form.name) }}
      <span class="help-block"><strong>{% trans %}Note:{% endtrans %}</strong>{% trans %}The name of the Question that will be shown
    when creating a new Quiz{% endtrans %}</span>
    </div>
    <div class="clearfix">
      {{ form_label(form.text) }}
      {{ form_errors(form.text) }}
      {{ form_widget(form.text) }}
      <span class="help-block"><strong>{% trans %}Note:{% endtrans %}</strong>{% trans %}The question itself. This is what
      will be shown when taking a quiz.{% endtrans %}</span>
    </div>


    <div class="clearfix">
      {% for i,letter in ['a)','b)','c)','d)'] %}
      <label>Answer {{ letter }}</label>
        <input type="text"  name="question[choices][choices][{{ i }}][label]" class="choice_label mini" value="{{ letter }}" />
        <input type="text"  name="question[choices][choices][{{ i }}][value]" class="choice_value"/>
      {% endfor %}
    </div>

    <input type="hidden" name="question[type]" value="choice" />
{{ form_widget(form._token) }}
<button type='submit' class="btn primary">{{ 'Save Question' | trans( {} , 'Quiz' ) }}</button>
</form>
{% endblock %}
